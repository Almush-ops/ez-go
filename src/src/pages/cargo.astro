---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import ProductCard from '@/components/ProductCard.astro';
import ContactForm from '@/components/ContactForm.astro';
import FAQ from '@/components/FAQ.astro';

const breadcrumbs = [
  { label: 'רכבי משא' },
];

const models = [
  {
    slug: 'express-6-gas',
    name: 'Express 6 Gas',
    hebrewName: 'Express 6 בנזין - רכב משא 6 מושבים',
    seats: 6,
    powerType: '13.5 HP Gas Engine',
    badge: '6 מושבים',
    mainImage: 'https://ezgo.txtsv.com/sites/default/files/2026-01/Express6_TouringS_MetallicCharcoal_v25_960x720.png',
  },
  {
    slug: 'valor-6',
    name: 'Valor 6',
    hebrewName: 'Valor 6 - רכב משא 6 מושבים',
    seats: 6,
    powerType: 'ELiTE Lithium / Gas',
    badge: '6 מושבים',
    mainImage: 'https://ezgo.txtsv.com/sites/default/files/2025-12/Valor6_S_Connect_Platinum_v25_960x720.png',
  },
];

const faqItems = [
  {
    question: 'למה מתאימים רכבי משא של E-Z-GO?',
    answer: 'רכבי משא של E-Z-GO מושלמים להסעת קבוצות בקיבוצים, מושבים, אתרי נופש, מלונות וקהילות מגורים. הם מספקים פתרון נוח ויעיל להובלת אנשים בשטחים גדולים.',
  },
  {
    question: 'כמה אנשים יכולים לשבת ברכב משא 6 מושבים?',
    answer: 'רכבי 6 המושבים מיועדים ל-6 נוסעים בנוחות מלאה, עם מרווח רגליים מורחב ומושבים ארגונומיים. מבנה הרכב מאפשר ישיבה נוחה גם בנסיעות ארוכות.',
  },
  {
    question: 'האם רכבי המשא מתאימים לשטח?',
    answer: 'כן, רכבי E-Z-GO בנויים לעמוד במגוון תנאי שטח. יש אפשרויות של גובה רכב מורם ומתלים משופרים לשימוש בשטחים לא סלולים.',
  },
  {
    question: 'מה ההבדל בין Express 6 ל-Valor 6?',
    answer: 'Express 6 הוא דגם פרימיום יותר עם אפשרויות התאמה אישית רבות ופיצ\'רים מתקדמים. Valor 6 הוא דגם עם יחס ערך-מחיר מצוין שמספק את כל הפונקציונליות הבסיסית באיכות גבוהה.',
  },
];
---

<BaseLayout
  title="רכבי משא E-Z-GO - 6 מושבים להסעות | EZ-GO Israel"
  description="רכבי E-Z-GO להסעת נוסעים - 6 מושבים לקהילות, קיבוצים ואתרי נופש. פתרונות הסעה יעילים ונוחים. צרו קשר לייעוץ מקצועי."
>
  <!-- Hero - Category style with background image -->
  <section class="relative min-h-[400px] flex items-center overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="https://ezgo.txtsv.com/sites/default/files/2025-11/EZGO_CON_2025_Express6_CC_0807.jpg"
        alt="רכבי משא E-Z-GO"
        class="w-full h-full object-cover"
        loading="eager"
      />
      <div class="absolute inset-0 bg-gradient-to-l from-dark/95 via-dark/80 to-dark/50"></div>
    </div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 py-16 w-full">
      <Breadcrumbs items={breadcrumbs} />
      <div class="max-w-2xl mt-6 text-white">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">רכבי משא E-Z-GO</h1>
        <p class="text-xl text-gray-200">
          פתרונות הסעה יעילים לקהילות, קיבוצים ואתרי נופש - רכבי 6 מושבים לנוחות מקסימלית.
        </p>
      </div>
    </div>
  </section>

  <!-- Models Grid - Right after Hero -->
  <section class="py-12 md:py-16 bg-surface">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-dark mb-8">דגמי משא E-Z-GO</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {models.map((model) => (
          <ProductCard
            name={model.name}
            hebrewName={model.hebrewName}
            seats={model.seats}
            powerType={model.powerType}
            image={model.mainImage}
            href={`/models/${model.slug}/`}
            badge={model.badge}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-6">
        <div class="text-center p-4">
          <div class="w-12 h-12 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-dark">6 מושבים</h3>
          <p class="text-sm text-gray-600 mt-1">הסעת קבוצות בנוחות</p>
        </div>
        <div class="text-center p-4">
          <div class="w-12 h-12 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-bold text-dark">בטיחות מקסימלית</h3>
          <p class="text-sm text-gray-600 mt-1">מערכות בלימה מתקדמות</p>
        </div>
        <div class="text-center p-4">
          <div class="w-12 h-12 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-dark">נוחות מרבית</h3>
          <p class="text-sm text-gray-600 mt-1">מושבים ארגונומיים</p>
        </div>
        <div class="text-center p-4">
          <div class="w-12 h-12 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="font-bold text-dark">יחס ערך-מחיר</h3>
          <p class="text-sm text-gray-600 mt-1">השקעה משתלמת</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-dark mb-8 text-center">שימושים מומלצים</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-dark mb-2">קיבוצים ומושבים</h3>
          <p class="text-gray-600">הסעת חברים ואורחים ברחבי השטח הפתוח, מהבתים לחדר האוכל, לבריכה ולאירועים.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-dark mb-2">מלונות ואתרי נופש</h3>
          <p class="text-gray-600">הסעת אורחים מהלובי לחדרים, למתקנים השונים ולאטרקציות באתר.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-dark mb-2">קהילות מגורים</h3>
          <p class="text-gray-600">הסעות פנימיות בשכונות סגורות, בתי אבות וקהילות גמלאים.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Section -->
  <section class="py-12 md:py-16 bg-surface">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <img
            src="https://ezgo.txtsv.com/sites/default/files/2025-11/EZGO_CON_2025_Express6_CC_0807.jpg"
            alt="רכב E-Z-GO Express 6 להסעת נוסעים"
            class="rounded-xl shadow-lg"
            width="600"
            height="400"
            loading="lazy"
          />
        </div>
        <div>
          <h2 class="text-3xl font-bold text-dark mb-4">נוחות לכל הנוסעים</h2>
          <p class="text-gray-600 mb-6">
            רכבי המשא של E-Z-GO תוכננו עם דגש על נוחות הנוסעים. מרווח רגליים מורחב, מושבים ארגונומיים ומתלים משופרים
            מבטיחים חוויית נסיעה נעימה גם בשטחים לא סלולים.
          </p>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-ezgo-500 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700">מושבים פונים קדימה לכל הנוסעים</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-ezgo-500 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700">ידיות אחיזה לעליה וירידה בטוחה</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-ezgo-500 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700">גג מקורה להגנה מהשמש והגשם</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-ezgo-500 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700">אפשרות לפנסי LED לנסיעה בלילה</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA + Form -->
  <section class="py-12 md:py-16 bg-ezgo-900 text-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold mb-4">מחפשים פתרון הסעות?</h2>
          <p class="text-xl text-gray-300 mb-6">
            השאירו פרטים ונחזור אליכם עם ייעוץ מקצועי והתאמה לצרכים הספציפיים שלכם.
          </p>
          <ul class="space-y-2 text-gray-300">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              ייעוץ מקצועי ללא התחייבות
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              התאמה למספר הנוסעים והשטח
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              רשת שירות ארצית
            </li>
          </ul>
        </div>
        <div>
          <ContactForm title="לפרטים נוספים על רכבי המשא" />
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-3xl mx-auto px-4">
      <FAQ items={faqItems} title="שאלות נפוצות על רכבי משא E-Z-GO" />
    </div>
  </section>
</BaseLayout>

<!-- ItemList Schema -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "רכבי משא E-Z-GO",
  "description": "רכבי E-Z-GO להסעת נוסעים ומשא",
  "numberOfItems": models.length,
  "itemListElement": models.map((model, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": model.hebrewName,
    "url": `https://ez-go.co.il/models/${model.slug}/`
  }))
})} />
