---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import { getCollection } from 'astro:content';

// Get all blog posts and sort by date (newest first)
const allPosts = await getCollection('blog');
const posts = allPosts.sort((a, b) =>
  new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

// Group posts by category
const categories = {
  comparisons: { label: 'השוואות', posts: [] as typeof posts },
  guides: { label: 'מדריכים', posts: [] as typeof posts },
  uses: { label: 'שימושים', posts: [] as typeof posts },
  technical: { label: 'טכני', posts: [] as typeof posts },
  info: { label: 'מידע', posts: [] as typeof posts },
};

posts.forEach(post => {
  const cat = post.data.category;
  if (categories[cat]) {
    categories[cat].posts.push(post);
  }
});

const breadcrumbs = [
  { label: 'מאמרים ומדריכים' },
];

// Format date in Hebrew
function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('he-IL', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}

// Get slug consistently
function getSlug(post: any): string {
  return post.data.slug || post.id.replace(/\.md$/, '');
}

// Category badge colors
const categoryColors: Record<string, string> = {
  comparisons: 'bg-purple-100 text-purple-700',
  guides: 'bg-ezgo-100 text-ezgo-700',
  uses: 'bg-green-100 text-green-700',
  technical: 'bg-amber-100 text-amber-700',
  info: 'bg-gray-100 text-gray-700',
};
---

<BaseLayout
  title="מאמרים ומדריכים | EZ-GO Israel"
  description="מאמרים, מדריכים והשוואות על רכבי E-Z-GO. כל מה שצריך לדעת על רכבים תפעוליים, טכנולוגיית ליתיום, תחזוקה ועוד."
>
  <!-- Hero -->
  <section class="bg-gradient-to-bl from-ezgo-900 via-ezgo-800 to-dark text-white py-16">
    <div class="max-w-7xl mx-auto px-4">
      <Breadcrumbs items={breadcrumbs} />
      <div class="max-w-3xl mt-6">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">מאמרים ומדריכים</h1>
        <p class="text-xl text-gray-300">
          כל המידע על רכבי E-Z-GO: מדריכי רכישה, השוואות, שימושים, טכנולוגיה ותחזוקה.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Posts (Latest 3) -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-dark mb-8">מאמרים אחרונים</h2>
      <div class="grid md:grid-cols-3 gap-6">
        {posts.slice(0, 3).map((post) => (
          <article class="group bg-surface rounded-xl overflow-hidden border border-border hover:shadow-lg transition-all duration-300">
            {post.data.image && (
              <a href={`/blog/${getSlug(post)}/`} class="block aspect-video overflow-hidden">
                <img
                  src={post.data.image}
                  alt={post.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              </a>
            )}
            <div class="p-5">
              <div class="flex items-center gap-3 mb-3">
                <span class={`text-xs font-medium px-2 py-1 rounded-full ${categoryColors[post.data.category]}`}>
                  {categories[post.data.category]?.label}
                </span>
                <time class="text-sm text-gray-500">{formatDate(post.data.date)}</time>
              </div>
              <h3 class="text-lg font-bold text-dark group-hover:text-ezgo-600 transition-colors mb-2">
                <a href={`/blog/${getSlug(post)}/`}>{post.data.title}</a>
              </h3>
              <p class="text-gray-600 text-sm line-clamp-2">{post.data.description}</p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- All Posts by Category -->
  <section class="py-12 md:py-16 bg-surface">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-dark mb-8">לפי קטגוריה</h2>

      <div class="space-y-12">
        {Object.entries(categories).map(([key, category]) =>
          category.posts.length > 0 && (
            <div>
              <h3 class="text-xl font-bold text-dark mb-4 flex items-center gap-2">
                <span class={`w-3 h-3 rounded-full ${categoryColors[key].split(' ')[0]}`}></span>
                {category.label}
                <span class="text-sm font-normal text-gray-500">({category.posts.length} מאמרים)</span>
              </h3>
              <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
                {category.posts.map((post) => (
                  <a
                    href={`/blog/${getSlug(post)}/`}
                    class="group bg-white rounded-lg p-4 border border-border hover:border-ezgo-300 hover:shadow-md transition-all"
                  >
                    <h4 class="font-semibold text-dark group-hover:text-ezgo-600 transition-colors mb-1">
                      {post.data.title}
                    </h4>
                    <p class="text-sm text-gray-600 line-clamp-2">{post.data.description}</p>
                  </a>
                ))}
              </div>
            </div>
          )
        )}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-12 md:py-16 bg-ezgo-900 text-white">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <h2 class="text-2xl md:text-3xl font-bold mb-4">לא מצאתם תשובה?</h2>
      <p class="text-xl text-gray-300 mb-8">
        צרו קשר ונשמח לעזור עם כל שאלה על רכבי E-Z-GO.
      </p>
      <a
        href="/contact/"
        class="inline-flex items-center gap-2 px-8 py-4 bg-white text-ezgo-700 font-semibold rounded-md hover:bg-gray-100 transition-colors"
      >
        צרו קשר
        <svg class="w-5 h-5 rtl:rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      </a>
    </div>
  </section>
</BaseLayout>
