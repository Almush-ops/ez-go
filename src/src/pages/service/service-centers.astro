---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import ContactForm from '@/components/ContactForm.astro';

const breadcrumbs = [
  { label: 'שירות ותמיכה', href: '/service/' },
  { label: 'מרכזי שירות' },
];

interface ServiceCenter {
  name: string;
  address: string;
  phone: string;
  region: 'north' | 'center' | 'south';
  hours?: string;
}

const serviceCenters: ServiceCenter[] = [
  // צפון
  { name: 'GN סוכנויות', address: 'רמות נפתלי', phone: '04-6905080', region: 'north' },
  { name: 'תל יוסף רכב חשמלי', address: 'עין חרוד מאוחד', phone: '04-6070134', region: 'north' },
  { name: 'אוטוטק', address: 'רח\' העמל 1, אלוני אבא', phone: '04-8383232', region: 'north' },
  { name: 'ארז מוטורס', address: 'כפר בית ג\'אן', phone: '072-2288456', region: 'north' },
  { name: 'בשטח', address: 'קיבוץ מענית', phone: '074-7408404', region: 'north' },
  { name: 'סוזוקה ע.פ', address: 'הקורנס 21, חיפה', phone: '04-8724501', region: 'north' },
  // מרכז
  { name: 'סקוטרז כפר סבא', address: 'הבנים 11, כפר סבא', phone: '050-6313131', region: 'center' },
  { name: 'כסלו רכב עזר', address: 'טירה', phone: '09-7455222', region: 'center' },
  { name: 'א.ג. קלנועיות', address: 'יעקב עולמי 51, משמר השבעה', phone: '03-5033319', region: 'center' },
  { name: 'משה וגיא טרקטורונים', address: 'ההר 2, אזור תעשייה הר טוב', phone: '050-2676789', region: 'center' },
  // דרום
  { name: 'גוד ריידר', address: 'פלדה 5, ערד', phone: '052-9435571', region: 'south' },
  { name: 'פרג לכיש', address: 'שדרות צורן 5, קרית גת', phone: '08-6885371', region: 'south' },
  { name: 'מדי אילת', address: 'מרכז הוכמן, מדיין 12, אילת', phone: '08-6332657', region: 'south' },
  { name: 'רותם סייקל', address: 'התופרת 6, אילת', phone: '08-6315540', region: 'south' },
];

const northCenters = serviceCenters.filter(c => c.region === 'north');
const centerCenters = serviceCenters.filter(c => c.region === 'center');
const southCenters = serviceCenters.filter(c => c.region === 'south');
---

<BaseLayout
  title="מרכזי שירות E-Z-GO בישראל - 14 מוסכים | EZ-GO Israel"
  description="14 מרכזי שירות מורשים לרכבי E-Z-GO ברחבי ישראל. מצאו את המוסך הקרוב אליכם בצפון, במרכז או בדרום."
>
  <!-- Hero -->
  <section class="bg-gradient-to-bl from-ezgo-900 via-ezgo-800 to-dark text-white py-16">
    <div class="max-w-7xl mx-auto px-4">
      <Breadcrumbs items={breadcrumbs} />
      <div class="max-w-3xl mt-6">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">מרכזי שירות</h1>
        <p class="text-xl text-gray-300">
          14 מוסכים מומלצים לטיפול ושירות לרכבי E-Z-GO ברחבי הארץ - בצפון, במרכז ובדרום.
        </p>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-8 bg-white border-b border-border">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-3 gap-4 text-center">
        <div>
          <div class="text-3xl font-bold text-ezgo-600">{northCenters.length}</div>
          <div class="text-sm text-gray-600">מוסכים בצפון</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-ezgo-600">{centerCenters.length}</div>
          <div class="text-sm text-gray-600">מוסכים במרכז</div>
        </div>
        <div>
          <div class="text-3xl font-bold text-ezgo-600">{southCenters.length}</div>
          <div class="text-sm text-gray-600">מוסכים בדרום</div>
        </div>
      </div>
    </div>
  </section>

  <!-- North -->
  <section class="py-12 md:py-16 bg-surface">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex items-center gap-3 mb-8">
        <div class="w-10 h-10 bg-ezgo-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-dark">אזור הצפון</h2>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {northCenters.map((center) => (
          <div class="bg-white rounded-xl p-6 border border-border hover:border-ezgo-300 hover:shadow-md transition-all">
            <h3 class="font-bold text-dark text-lg mb-3">{center.name}</h3>
            <div class="space-y-2 text-sm">
              <div class="flex items-start gap-2 text-gray-600">
                <svg class="w-4 h-4 text-ezgo-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>{center.address}</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-ezgo-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <a href={`tel:${center.phone}`} class="text-ezgo-600 hover:text-ezgo-700 font-medium" dir="ltr">{center.phone}</a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Center -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex items-center gap-3 mb-8">
        <div class="w-10 h-10 bg-ezgo-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-dark">אזור המרכז</h2>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {centerCenters.map((center) => (
          <div class="bg-surface rounded-xl p-6 border border-border hover:border-ezgo-300 hover:shadow-md transition-all">
            <h3 class="font-bold text-dark text-lg mb-3">{center.name}</h3>
            <div class="space-y-2 text-sm">
              <div class="flex items-start gap-2 text-gray-600">
                <svg class="w-4 h-4 text-ezgo-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>{center.address}</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-ezgo-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <a href={`tel:${center.phone}`} class="text-ezgo-600 hover:text-ezgo-700 font-medium" dir="ltr">{center.phone}</a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- South -->
  <section class="py-12 md:py-16 bg-surface">
    <div class="max-w-7xl mx-auto px-4">
      <div class="flex items-center gap-3 mb-8">
        <div class="w-10 h-10 bg-ezgo-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-dark">אזור הדרום</h2>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {southCenters.map((center) => (
          <div class="bg-white rounded-xl p-6 border border-border hover:border-ezgo-300 hover:shadow-md transition-all">
            <h3 class="font-bold text-dark text-lg mb-3">{center.name}</h3>
            <div class="space-y-2 text-sm">
              <div class="flex items-start gap-2 text-gray-600">
                <svg class="w-4 h-4 text-ezgo-500 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>{center.address}</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-4 h-4 text-ezgo-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
                <a href={`tel:${center.phone}`} class="text-ezgo-600 hover:text-ezgo-700 font-medium" dir="ltr">{center.phone}</a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA + Form -->
  <section class="py-12 md:py-16 bg-ezgo-900 text-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold mb-4">לא מצאתם מוסך באזורכם?</h2>
          <p class="text-xl text-gray-300 mb-6">
            השאירו פרטים ונעזור לכם למצוא את הפתרון המתאים לאזור שלכם.
          </p>
          <div class="space-y-4 text-gray-300">
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-ezgo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <a href="tel:077-231-2585" class="hover:text-white transition-colors">077-231-2585</a>
            </div>
            <div class="flex items-center gap-3">
              <svg class="w-6 h-6 text-ezgo-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <a href="mailto:support@ez-go.co.il" class="hover:text-white transition-colors">support@ez-go.co.il</a>
            </div>
          </div>
        </div>
        <div>
          <ContactForm title="לתיאום שירות" />
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<!-- LocalBusiness Schema for each service center -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "מרכזי שירות E-Z-GO בישראל",
  "description": "14 מרכזי שירות מורשים לרכבי E-Z-GO ברחבי ישראל",
  "numberOfItems": serviceCenters.length,
  "itemListElement": serviceCenters.map((center, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "LocalBusiness",
      "name": center.name,
      "telephone": center.phone,
      "address": {
        "@type": "PostalAddress",
        "streetAddress": center.address,
        "addressCountry": "IL"
      }
    }
  }))
})} />
