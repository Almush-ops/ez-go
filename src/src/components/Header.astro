---
const currentPath = Astro.url.pathname;
const phone = '077-231-2585';

const navItems = [
  { label: 'דף הבית', href: '/' },
  { label: 'רכבים חשמליים', href: '/electric/' },
  { label: 'רכבי בנזין', href: '/gas/' },
  { label: 'רכבי משא', href: '/cargo/' },
  { label: 'לתעשייה', href: '/industrial/' },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm border-b border-border">
  <!-- Top bar -->
  <div class="bg-dark text-white text-sm py-1.5">
    <div class="max-w-7xl mx-auto px-4 flex justify-between items-center">
      <span>המומחים לרכבי E-Z-GO בישראל</span>
      <a href={`tel:${phone}`} class="hover:text-ezgo-400 transition-colors font-medium flex items-center gap-1">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        {phone}
      </a>
    </div>
  </div>

  <!-- Main nav -->
  <nav class="max-w-7xl mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center group">
        <img src="/logo.webp" alt="EZ-GO Israel - איזי גו ישראל" class="h-16 md:h-20 w-auto" width="220" height="70" />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'px-3 py-2 rounded-md text-sm font-medium transition-colors',
              isActive(item.href)
                ? 'text-ezgo-600 bg-ezgo-50'
                : 'text-gray-700 hover:text-ezgo-600 hover:bg-ezgo-50',
            ]}
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- CTA + Mobile toggle -->
      <div class="flex items-center gap-3">
        <a
          href="/contact/"
          class="hidden sm:inline-flex items-center px-4 py-2 bg-ezgo-500 text-white text-sm font-medium rounded-md hover:bg-ezgo-600 transition-colors"
        >
          צור קשר
        </a>

        <!-- Mobile menu button -->
        <button
          id="mobile-menu-btn"
          class="lg:hidden p-2 text-gray-700 hover:text-ezgo-600"
          aria-label="תפריט"
        >
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path id="menu-icon" stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden lg:hidden pb-4 border-t border-border pt-3">
      <div class="flex flex-col gap-1">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'px-3 py-2.5 rounded-md text-sm font-medium transition-colors',
              isActive(item.href)
                ? 'text-ezgo-600 bg-ezgo-50'
                : 'text-gray-700 hover:text-ezgo-600 hover:bg-ezgo-50',
            ]}
          >
            {item.label}
          </a>
        ))}
        <a
          href="/contact/"
          class="mt-2 text-center px-4 py-2.5 bg-ezgo-500 text-white text-sm font-medium rounded-md hover:bg-ezgo-600 transition-colors"
        >
          צור קשר
        </a>
        <a
          href={`tel:${phone}`}
          class="text-center px-4 py-2.5 border border-ezgo-500 text-ezgo-600 text-sm font-medium rounded-md hover:bg-ezgo-50 transition-colors"
        >
          חייגו עכשיו: {phone}
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
