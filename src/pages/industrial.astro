---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import ProductCard from '@/components/ProductCard.astro';
import ContactForm from '@/components/ContactForm.astro';
import FAQ from '@/components/FAQ.astro';

const breadcrumbs = [
  { label: 'רכבים לתעשייה' },
];

const models = [
  {
    slug: 'cushman-hauler-pro',
    name: 'Cushman Hauler PRO',
    hebrewName: 'Cushman Hauler PRO - רכב תעשייתי',
    seats: 2,
    powerType: 'ELiTE Electric',
    badge: 'תעשייתי',
    mainImage: 'https://ezgo.txtsv.com/sites/default/files/2024-01/CUS_GOF_HaulerPRO_ELiTE_2022_04543.jpg',
  },
  {
    slug: 'hauler-800',
    name: 'Hauler 800',
    hebrewName: 'Hauler 800 - רכב משא תעשייתי',
    seats: 2,
    powerType: 'Electric / Gas',
    badge: 'תעשייתי',
    mainImage: 'https://ezgo.txtsv.com/sites/default/files/2024-01/CUS_GOF_HaulerPRO_ELiTE_2022_04543.jpg',
  },
];

const faqItems = [
  {
    question: 'מה ההבדל בין רכבי Cushman לרכבי E-Z-GO?',
    answer: 'Cushman הוא מותג תעשייתי בבעלות Textron, אותה חברה שמייצרת את E-Z-GO. רכבי Cushman תוכננו במיוחד לשימוש תעשייתי כבד, עם דגש על עמידות, קיבולת משא גבוהה ופשטות תחזוקה.',
  },
  {
    question: 'כמה משקל יכול רכב תעשייתי לשאת?',
    answer: 'רכבי Hauler של Cushman יכולים לשאת עד 800 ליברות (כ-360 ק"ג) על הארגז האחורי, בנוסף לשני הנוסעים בקדמה. קיבולת זו מתאימה לרוב צרכי ההובלה במפעלים ומתקנים.',
  },
  {
    question: 'האם רכבים תעשייתיים מתאימים לשימוש פנימי?',
    answer: 'כן, רכבי Cushman חשמליים מתאימים במיוחד לשימוש פנימי במפעלים, מחסנים ומרכזים לוגיסטיים. הם שקטים, ללא פליטות, וקומפקטיים מספיק למעבר בשבילים צרים.',
  },
  {
    question: 'מה יתרון השימוש ברכב תעשייתי על פני עגלה רגילה?',
    answer: 'רכב תעשייתי מספק ניידות מהירה יותר, נוחות לנהג, קיבולת משא גבוהה יותר ויכולת לעבוד שעות ארוכות ללא עייפות. זה מגביר את הפרודוקטיביות ומפחית סיכוני בטיחות בעבודה.',
  },
];
---

<BaseLayout
  title="רכבים תעשייתיים E-Z-GO ו-Cushman | EZ-GO Israel"
  description="רכבי Cushman ו-E-Z-GO לשימוש תעשייתי - עמידים, חזקים ומותאמים לעבודה במפעלים ומתקנים. צרו קשר לייעוץ מקצועי."
>
  <!-- Hero -->
  <section class="bg-gradient-to-bl from-ezgo-900 via-ezgo-800 to-dark text-white py-16">
    <div class="max-w-7xl mx-auto px-4">
      <Breadcrumbs items={breadcrumbs} />
      <div class="max-w-3xl mt-6">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">רכבים לתעשייה</h1>
        <p class="text-xl text-gray-300">
          רכבי Cushman ו-E-Z-GO לשימוש תעשייתי - עמידים, חזקים ומותאמים לעבודה במפעלים, מחסנים ומתקנים.
        </p>
      </div>
    </div>
  </section>

  <!-- Benefits -->
  <section class="py-12 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid md:grid-cols-4 gap-6">
        <div class="text-center p-4">
          <div class="w-12 h-12 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="font-bold text-dark">עמידות גבוהה</h3>
          <p class="text-sm text-gray-600 mt-1">בנויים לעבודה קשה</p>
        </div>
        <div class="text-center p-4">
          <div class="w-12 h-12 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <h3 class="font-bold text-dark">קיבולת משא</h3>
          <p class="text-sm text-gray-600 mt-1">עד 800 ליברות</p>
        </div>
        <div class="text-center p-4">
          <div class="w-12 h-12 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
          <h3 class="font-bold text-dark">שקט ונקי</h3>
          <p class="text-sm text-gray-600 mt-1">מתאים לשימוש פנימי</p>
        </div>
        <div class="text-center p-4">
          <div class="w-12 h-12 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-3">
            <svg class="w-6 h-6 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
            </svg>
          </div>
          <h3 class="font-bold text-dark">גודל קומפקטי</h3>
          <p class="text-sm text-gray-600 mt-1">מעבר בשבילים צרים</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Models Grid -->
  <section class="py-12 md:py-16 bg-surface">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-dark mb-8">דגמים לתעשייה</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {models.map((model) => (
          <ProductCard
            name={model.name}
            hebrewName={model.hebrewName}
            seats={model.seats}
            powerType={model.powerType}
            image={model.mainImage}
            href={`/models/${model.slug}/`}
            badge={model.badge}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Use Cases Section -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-dark mb-8 text-center">סביבות עבודה</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-surface rounded-xl p-6 text-center">
          <div class="w-14 h-14 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
            </svg>
          </div>
          <h3 class="font-bold text-dark mb-2">מפעלים</h3>
          <p class="text-sm text-gray-600">הובלת חלקים וחומרים בין קווי ייצור</p>
        </div>
        <div class="bg-surface rounded-xl p-6 text-center">
          <div class="w-14 h-14 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <h3 class="font-bold text-dark mb-2">מחסנים</h3>
          <p class="text-sm text-gray-600">תנועה מהירה במרכזים לוגיסטיים</p>
        </div>
        <div class="bg-surface rounded-xl p-6 text-center">
          <div class="w-14 h-14 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 14v3m4-3v3m4-3v3M3 21h18M3 10h18M3 7l9-4 9 4M4 10h16v11H4V10z" />
            </svg>
          </div>
          <h3 class="font-bold text-dark mb-2">מתקני ייצור</h3>
          <p class="text-sm text-gray-600">תמיכה בתהליכי ייצור וארגון</p>
        </div>
        <div class="bg-surface rounded-xl p-6 text-center">
          <div class="w-14 h-14 bg-ezgo-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-7 h-7 text-ezgo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
          </div>
          <h3 class="font-bold text-dark mb-2">קיבוצים</h3>
          <p class="text-sm text-gray-600">עבודה חקלאית ותחזוקה</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Cushman Brand Section -->
  <section class="py-12 md:py-16 bg-surface">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-dark mb-4">Cushman - מותג תעשייתי מובייל</h2>
          <p class="text-gray-600 mb-6">
            Cushman הוא מותג עם היסטוריה של למעלה מ-100 שנה בייצור כלי רכב תעשייתיים.
            כחלק מקבוצת Textron, Cushman משתפת טכנולוגיות ותקני איכות עם E-Z-GO.
          </p>
          <ul class="space-y-3">
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-ezgo-500 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700">מותג Textron - אמינות מוכחת</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-ezgo-500 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700">עיצוב תעשייתי עמיד</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-ezgo-500 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700">חלקי חילוף זמינים</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-5 h-5 text-ezgo-500 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-gray-700">תמיכה טכנית מקצועית</span>
            </li>
          </ul>
        </div>
        <div>
          <img
            src="https://ezgo.txtsv.com/sites/default/files/2024-01/CUS_GOF_HaulerPRO_ELiTE_2022_04543.jpg"
            alt="רכב Cushman Hauler PRO תעשייתי"
            class="rounded-xl shadow-lg"
            width="600"
            height="400"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- CTA + Form -->
  <section class="py-12 md:py-16 bg-ezgo-900 text-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold mb-4">מחפשים פתרון תעשייתי?</h2>
          <p class="text-xl text-gray-300 mb-6">
            השאירו פרטים ונחזור אליכם עם ייעוץ מקצועי והתאמה לצרכים התעשייתיים שלכם.
          </p>
          <ul class="space-y-2 text-gray-300">
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              ייעוץ מקצועי ללא התחייבות
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              התאמה לסביבת העבודה
            </li>
            <li class="flex items-center gap-2">
              <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
              </svg>
              רשת שירות ארצית
            </li>
          </ul>
        </div>
        <div>
          <ContactForm title="לפרטים נוספים על רכבים תעשייתיים" />
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-3xl mx-auto px-4">
      <FAQ items={faqItems} title="שאלות נפוצות על רכבים תעשייתיים" />
    </div>
  </section>
</BaseLayout>

<!-- ItemList Schema -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "רכבים תעשייתיים E-Z-GO ו-Cushman",
  "description": "רכבי Cushman ו-E-Z-GO לשימוש תעשייתי",
  "numberOfItems": models.length,
  "itemListElement": models.map((model, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": model.hebrewName,
    "url": `https://ez-go.co.il/models/${model.slug}/`
  }))
})} />
