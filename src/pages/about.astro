---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/Breadcrumbs.astro';
import FAQ from '@/components/FAQ.astro';
import ContactForm from '@/components/ContactForm.astro';

const breadcrumbs = [
  { label: 'אודות E-Z-GO' },
];

const timeline = [
  { year: '1954', title: 'הקמת החברה', desc: 'שני אחים מאוגוסטה, ג\'ורג\'יה מקימים את E-Z-GO במטרה לבנות את רכב הגולף הטוב בעולם.' },
  { year: '1960', title: 'הצטרפות ל-Textron', desc: 'E-Z-GO נרכשת על ידי Textron Inc. ומקבלת גישה למשאבים ותשתיות של תאגיד בינלאומי.' },
  { year: '2009', title: 'פרס Shingo', desc: 'E-Z-GO זוכה בפרס Shingo לייצור מצוין - אחד הפרסים היוקרתיים ביותר בתעשייה.' },
  { year: '2020+', title: 'טכנולוגיית ELiTE Lithium', desc: 'השקת סוללות הליתיום המתקדמות בשיתוף Samsung SDI - אפס תחזוקה, חיי סוללה של 8+ שנים.' },
];

const faqItems = [
  {
    question: 'מיהי E-Z-GO?',
    answer: 'E-Z-GO היא יצרנית רכבי גולף ורכבים תפעוליים מובילה בעולם, שנוסדה ב-1954 באוגוסטה, ג\'ורג\'יה. כיום חלק מ-Textron Inc. (NYSE: TXT), עם למעלה מ-65 שנות ניסיון בתעשייה.',
  },
  {
    question: 'מהי Textron?',
    answer: 'Textron Inc. היא קונגלומרט אמריקאי עם למעלה מ-35,000 עובדים ב-25 מדינות. מותגים נוספים: Bell Helicopter, Cessna, Jacobsen, Cushman. החברה נסחרת בבורסה של ניו יורק (NYSE: TXT).',
  },
  {
    question: 'מה הייחוד של רכבי E-Z-GO?',
    answer: 'E-Z-GO מציעה טכנולוגיות מתקדמות כמו ELiTE Lithium (סוללות Samsung SDI), IntelliBrake (בלם חניה אוטומטי), ומסכי מגע ECOXGEAR. החברה עומדת בתקני ISO 9001 ומחזיקה בפרס Shingo לייצור מצוין.',
  },
];
---

<BaseLayout
  title="אודות E-Z-GO - ההיסטוריה והטכנולוגיה"
  description="E-Z-GO נוסדה ב-1954 ומובילה את תעשיית הרכבים התפעוליים כבר למעלה מ-65 שנה. חלק מ-Textron Inc. עם טכנולוגיית ELiTE Lithium המתקדמת."
>
  <!-- Hero -->
  <section class="bg-gradient-to-bl from-ezgo-900 via-ezgo-800 to-dark text-white py-16">
    <div class="max-w-7xl mx-auto px-4">
      <Breadcrumbs items={breadcrumbs} />
      <div class="max-w-3xl mt-6">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">אודות E-Z-GO</h1>
        <p class="text-xl text-gray-300">
          מעל 65 שנות מצוינות בייצור רכבים תפעוליים ורכבי גולף. מאוגוסטה, ג'ורג'יה לכל העולם.
        </p>
      </div>
    </div>
  </section>

  <!-- Story -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-dark mb-4">הסיפור של E-Z-GO</h2>
          <div class="space-y-4 text-gray-600 leading-relaxed">
            <p>
              בשנת 1954, באוגוסטה, ג'ורג'יה, שני אחים החליטו לבנות את רכב הגולף הטוב ביותר בעולם.
              הם האמינו שאפשר לשלב איכות, אמינות ונוחות במוצר אחד.
            </p>
            <p>
              היום, למעלה מ-65 שנה מאוחר יותר, E-Z-GO היא מותג מוביל בעולם הרכבים התפעוליים.
              כחלק מ-Textron Inc. - קונגלומרט אמריקאי עם 35,000 עובדים ב-25 מדינות -
              E-Z-GO ממשיכה לחדש ולהוביל את התעשייה.
            </p>
            <p>
              מרכבי גולף קלאסיים ועד רכבי Street Legal מתקדמים, מסוללות עופרת-חומצה ועד טכנולוגיית
              ELiTE Lithium עם סוללות Samsung SDI - E-Z-GO מגדירה את הסטנדרט בתעשייה.
            </p>
          </div>
        </div>
        <div class="relative">
          <img
            src="/images/hero/group-hero.webp"
            alt="מגוון רכבי E-Z-GO"
            class="rounded-xl shadow-lg w-full"
            width="600"
            height="400"
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </section>

  <!-- Timeline -->
  <section class="py-12 md:py-16 bg-surface">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-3xl font-bold text-dark mb-10 text-center">ציר הזמן של E-Z-GO</h2>
      <div class="space-y-6">
        {timeline.map((item, index) => (
          <div class="flex gap-6">
            <div class="flex flex-col items-center">
              <div class="w-16 h-16 rounded-full bg-ezgo-500 text-white flex items-center justify-center font-bold text-sm">
                {item.year}
              </div>
              {index < timeline.length - 1 && (
                <div class="flex-1 w-0.5 bg-ezgo-200 mt-2"></div>
              )}
            </div>
            <div class="flex-1 pb-6">
              <h3 class="font-bold text-dark text-lg mb-1">{item.title}</h3>
              <p class="text-gray-600">{item.desc}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-12 md:py-16 bg-ezgo-600 text-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div>
          <p class="text-4xl md:text-5xl font-bold mb-2">65+</p>
          <p class="text-ezgo-200">שנות ייצור</p>
        </div>
        <div>
          <p class="text-4xl md:text-5xl font-bold mb-2">200+</p>
          <p class="text-ezgo-200">מדינות</p>
        </div>
        <div>
          <p class="text-4xl md:text-5xl font-bold mb-2">35K+</p>
          <p class="text-ezgo-200">עובדי Textron</p>
        </div>
        <div>
          <p class="text-4xl md:text-5xl font-bold mb-2">ISO</p>
          <p class="text-ezgo-200">9001 Certified</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Textron Family -->
  <section class="py-12 md:py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-10">
        <h2 class="text-3xl font-bold text-dark mb-3">משפחת Textron</h2>
        <p class="text-gray-600">מותגים נוספים בקבוצת Textron Inc.</p>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {[
          { name: 'Cushman', desc: 'רכבים תעשייתיים' },
          { name: 'Bell', desc: 'מסוקים' },
          { name: 'Cessna', desc: 'מטוסים' },
          { name: 'Jacobsen', desc: 'ציוד גינון' },
        ].map((brand) => (
          <div class="p-6 bg-surface rounded-xl text-center">
            <p class="font-bold text-dark text-lg mb-1">{brand.name}</p>
            <p class="text-gray-500 text-sm">{brand.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Official Social Links -->
  <section class="py-10 md:py-12 bg-surface">
    <div class="max-w-7xl mx-auto px-4">
      <div class="text-center mb-6">
        <h2 class="text-2xl font-bold text-dark mb-2">E-Z-GO ברשתות החברתיות</h2>
        <p class="text-gray-600">עקבו אחרי E-Z-GO הרשמי</p>
      </div>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="https://www.facebook.com/ezgo" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 px-5 py-3 bg-white border border-border rounded-lg hover:border-ezgo-300 transition-colors">
          <svg class="w-5 h-5 text-[#1877F2]" viewBox="0 0 24 24" fill="currentColor">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
          </svg>
          <span class="text-dark font-medium">Facebook</span>
        </a>
        <a href="https://www.youtube.com/user/EZGO" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 px-5 py-3 bg-white border border-border rounded-lg hover:border-ezgo-300 transition-colors">
          <svg class="w-5 h-5 text-[#FF0000]" viewBox="0 0 24 24" fill="currentColor">
            <path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
          </svg>
          <span class="text-dark font-medium">YouTube</span>
        </a>
        <a href="https://www.linkedin.com/company/ezgo" target="_blank" rel="noopener noreferrer" class="flex items-center gap-2 px-5 py-3 bg-white border border-border rounded-lg hover:border-ezgo-300 transition-colors">
